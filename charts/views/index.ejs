<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Top Camping Data</title>
    <!-- Include chart library (e.g., Chart.js) -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<style>
    #campingChart {
        z-index: 1;
    }
    #chart {
        width :600px;
    }
</style>
<body>
<h1>Top Camping Data</h1>
<div id="chart">
    <canvas id="campingChart" width="400" height="400"></canvas></div>
<script>
    const campingData = JSON.parse('<%- JSON.stringify(campingData) %>');
    const campingGrounds = campingData.map(data => data[0]);
    const views = campingData.map(data => data[2]);

    const ctx = document.getElementById('campingChart').getContext('2d');
    const chart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: campingGrounds,
            datasets: [{
                label: 'Views',
                data: views,
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>
</body>
</html>